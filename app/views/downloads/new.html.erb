<P>
<div class="blog">
	<div class="blog-heading">Upload a File...</div><P>

		<div align="left" ><P>&nbsp;<P>
			<% form_for(@download, :html => { :multipart => true }) do |f| %>
			  <%= f.error_messages %>
			  <p>
			    <%= f.label "Title" %><br />
			    <%= f.text_field :title  %>
			  </p>
			  <p>
			    <%= f.label :tags %><br />
			    <%= f.text_field :tags %>
			  </p>
			  <p class="create-form">
					<%= textile_editor 'download', 'body', :cols => 66, :rows => 30 -%>
					<%= textile_editor_initialize -%>
			  </p>

			  <p>
			    <label for="uploaded_data">Select File:</label>
			    <%= f.file_field :uploaded_data %>
			  </p>
			  <p>
			    <% if logged_in? %>
				  	<%= f.hidden_field :user_id, :value=>@current_user.id %>
					<% end %>
			  </p>
			  <p>
			    <%= f.submit 'Create' %>
			  </p>
			<% end %>
		</div>

</div><br/>









<% render :file => '/_partial/_includes.html.erb'  %>