
<% @downloads_popular.each do |download| %>
  <div class="recent-sidebar">
	  <div class="recent-title"><a href="/downloads/<%=h download.id %>"><%=h download.title[0..23] %>...</a></div>
  	<div class="recent-pageviews">Views: <%= download.views.to_s == ""  ? "0" : download.views %></div>
  	<div class="recent-date-create" align="left"><%=h download.created_at.strftime("%B %d, %Y @ %I:%M%p") %></div>
	</div>
<% end %>


