
<div align="center" class="loginpanel">Please login with your details.</div>

<% form_tag session_path do -%>
<table align="center">
	<tr><td class="loginpanel">
		<div>Login</div><%= text_field_tag 'login', @login, :size => 25 %>
	</td></tr>
	<tr><td class="loginpanel">
		<div>Password</div><%= password_field_tag 'password', nil, :size => 25 %>
	</td></tr>
	<tr><td class="loginpanel">
		Remember Me <%= check_box_tag 'remember_me', '1', @remember_me %>
		<div style="margin-top:-20px" align="right"><%= submit_tag 'Log in' %></div>
	</td></tr>
</table><P>
<% end -%>

<div class="loginpanel" align="center">
	| <a href="/signup">Register</a> 
	| <a href="/activate">Activate</a>
	| <a href="/forgot">Forgot Login</a> |
</div>







